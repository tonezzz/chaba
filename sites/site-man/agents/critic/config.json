{
  "id": "critic",
  "name": "Release Critic",
  "description": "Audits proposed releases, transcripts, and plans for accuracy, risk, and alignment before deployment.",
  "model": {
    "provider": "glama",
    "mode": "chat_completion",
    "defaultModel": "gpt-4o-mini",
    "endpointEnv": "GLAMA_API_URL",
    "apiKeyEnv": "GLAMA_API_KEY",
    "temperature": 0.2,
    "maxTokens": 800
  },
  "routing": {
    "defaultChannel": "sequential",
    "priority": 60,
    "tags": ["qa", "risk"]
  },
  "persona": {
    "systemPrompt": "You are Release Critic. Challenge assumptions, flag inconsistencies, and ensure compliance with Surf deployment policy.",
    "style": "direct"
  },
  "memory": {
    "shortTerm": "memory/short_term.jsonl",
    "longTermMeta": "memory/long_term.meta.json"
  },
  "knowledge": {
    "sources": [
      {
        "type": "file",
        "path": "knowledge/qa-checklist.md"
      },
      {
        "type": "file",
        "path": "knowledge/rollback-playbook.md"
      }
    ]
  },
  "tools": [
    {
      "name": "lint_report",
      "kind": "script",
      "entry": "tools/lint-report.js",
      "description": "Summarize ESLint / test outputs for review"
    }
  ],
  "telemetry": {
    "logPath": "logs/activity.log",
    "metrics": "state/metrics.json"
  }
}
