# Standalone DEKA stack env
# Copy to .env and override as needed.

# Host ports (chosen to avoid conflicts with pc1-stack defaults)
DEKA_MCP_DEKA_PORT=8271
DEKA_CHAT_API_PORT=8191
DEKA_CHAT_UI_PORT=8182
DEKA_MCP_RAG_DEKA_PORT=8058
DEKA_MCP_PLAYWRIGHT_PORT=8261
DEKA_QDRANT_PORT=6334
DEKA_OLLAMA_PORT=11436

# Optional: point DEKA chat at your running mcp-glama
# If pc1-stack is running mcp-glama on host port 7241, host.docker.internal works.
DEKA_MCP_GLAMA_URL=http://host.docker.internal:7241

# Retrieval tuning
DEKA_TOP_K=6
DEKA_MIN_TOP_SCORE=0.12
DEKA_CHAT_TIMEOUT_SECONDS=60
DEKA_CHAT_LOG_LEVEL=info

# mcp-deka behavior
DEKA_MCP_DEKA_TIMEOUT_SECONDS=180
DEKA_MCP_DEKA_PLAYWRIGHT_RETRIES=2
DEKA_MCP_DEKA_PLAYWRIGHT_RETRY_BACKOFF_SECONDS=1.0
DEKA_MCP_DEKA_LOG_LEVEL=info

# Build contexts (usually leave default)
# DEKA_MCP_DEKA_BUILD_CONTEXT=../../mcp/mcp-deka
# DEKA_CHAT_API_BUILD_CONTEXT=../../mcp/deka-chat-api
# DEKA_MCP_RAG_BUILD_CONTEXT=../../mcp/mcp-rag
# DEKA_MCP_PLAYWRIGHT_BUILD_CONTEXT=../../mcp/mcp-playwright
