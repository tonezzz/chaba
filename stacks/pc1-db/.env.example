# PC1 DB Stack - Data storage and database services
# Environment variables for database and storage services

# Build contexts
MCP_RAG_BUILD_CONTEXT=../../mcp/mcp-rag
MCP_DOC_ARCHIVER_BUILD_CONTEXT=../../mcp/mcp-doc-archiver

# Service ports
QDRANT_PORT=6333
MCP_RAG_PORT=8055
MCP_DOC_ARCHIVER_PORT=8066
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
VAULT_PORT=8200

# Qdrant configuration
QDRANT_TEXT_COLLECTION=rag_text
QDRANT_IMAGE_COLLECTION=rag_image

# RAG configuration
OLLAMA_URL=http://pc1.vpn:11437
OLLAMA_EMBED_MODEL=nomic-embed-text
CLIP_MODEL=clip-ViT-B-32

# Document archiver
DOC_ARCHIVER_DATA_DIR=/data
DOC_ARCHIVER_OPENAI_BASE_URL=http://host.docker.internal:8181
DOC_ARCHIVER_OPENAI_MODEL=glama-default
DOC_ARCHIVER_TIMEOUT_SECONDS=60

# Authentik database
AUTHENTIK_POSTGRES_DB=authentik
AUTHENTIK_POSTGRES_USER=authentik
AUTHENTIK_POSTGRES_PASSWORD=please-set-authentik-postgres-password

# MinIO object storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Vault secrets management
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://localhost:8200

# Environment file
PC1_DB_ENV_FILE=.env
