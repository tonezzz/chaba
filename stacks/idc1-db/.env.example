# idc1-db stack environment template (RAG + Memory)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

# RAG stack (Qdrant + mcp-rag)
# Note: ollama is now in idc1-ai stack
MCP_RAG_BUILD_CONTEXT=../../mcp/mcp-rag
MCP_RAG_PORT=8455

QDRANT_PORT=6333
QDRANT_URL=http://qdrant:6333
QDRANT_TEXT_COLLECTION=rag_text
QDRANT_IMAGE_COLLECTION=rag_image

# External Ollama (from idc1-ai stack)
OLLAMA_URL=http://ollama.idc1-ai-net:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

CLIP_MODEL=clip-ViT-B-32

# Memory service
MCP_MEMORY_BUILD_CONTEXT=../../mcp/mcp-memory
MCP_MEMORY_PORT=8470
