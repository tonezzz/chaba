# pc2-web stack environment template (Webtop services)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

# Webtops Router
WEBTOPS_ROUTER_BUILD_CONTEXT=../../mcp/webtops-router
WEBTOPS_ROUTER_PORT=3001
WEBTOPS_ROUTER_ADMIN_TOKEN=__REPLACE_ME__
WEBTOPS_ROUTER_DEFAULT_IMAGE=lscr.io/linuxserver/webtop:latest
WEBTOPS_ROUTER_DOCKER_NETWORK=pc2-web-net
WEBTOPS_ROUTER_SESSION_INTERNAL_PORT=3000
WEBTOPS_ROUTER_SESSION_MOUNT_PATH=/config
WEBTOPS_ROUTER_SESSION_TZ=Asia/Bangkok
WEBTOPS_ROUTER_SESSION_PUID=1000
WEBTOPS_ROUTER_SESSION_PGID=1000
WEBTOPS_ROUTER_SESSION_PASSWORD=
WEBTOPS_ROUTER_SESSION_SUBTITLE=PC2 Webtop
WEBTOPS_ROUTER_SESSION_TITLE=PC2 Development Environment

# Webtops Management
MCP_WEBTOPS_BUILD_CONTEXT=../../mcp/mcp-webtops
MCP_WEBTOPS_PORT=8091
WEBTOPS_ADMIN_TOKEN=__REPLACE_ME__
WEBTOPS_ROUTER_ADMIN_TOKEN=__REPLACE_ME__
WEBTOPS_BACKEND=router
WEBTOPS_DOCKER_NETWORK=pc2-web-net
WEBTOPS_SESSION_INTERNAL_PORT=3000
WEBTOPS_SESSION_IMAGE=lscr.io/linuxserver/webtop:latest
WEBTOPS_SESSION_IMAGE_PULL=true
WEBTOPS_SESSION_UPSTREAM_SCHEME=http
WEBTOPS_SESSION_MOUNT_PATH=/config
WEBTOPS_SESSION_TZ=Asia/Bangkok
WEBTOPS_SESSION_PUID=1000
WEBTOPS_SESSION_PGID=1000
WEBTOPS_SESSION_PASSWORD=
WEBTOPS_SESSION_SUBTITLE=PC2 Webtop
WEBTOPS_SESSION_TITLE=PC2 Development Environment

# Webtops Control Panel
WEBTOPS_CP_BUILD_CONTEXT=../../mcp/webtops-cp
WEBTOPS_CP_PORT=3005
WEBTOPS_CP_ROUTER_ADMIN_TOKEN=__REPLACE_ME__
WEBTOPS_CP_DOCKER_NETWORK=pc2-web-net
