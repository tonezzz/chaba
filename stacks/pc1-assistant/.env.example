# pc1-assistant stack environment template (mcp-assistant + optional LINE webhook)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

# Networks
# Ensure shared networks exist: stacks/pc1-stack/create-networks.yml

# LINE Debug UI
LINE_DEBUG_UI_PORT=8098

# MCP ASSISTANT
MCP_ASSISTANT_BUILD_CONTEXT=../../mcp/mcp-assistant
MCP_ASSISTANT_PORT=18099
MCP_ASSISTANT_CONTROL_TOKEN=
GLAMA_MCP_URL=http://host.docker.internal:7241/invoke
GLAMA_MODEL=
GLAMA_SYSTEM_PROMPT=
ONE_MCP_URL=
ONE_MCP_BASIC_AUTH=
ONE_MCP_USERNAME=
ONE_MCP_PASSWORD=
MCP_ASSISTANT_ALLOWED_TOOLS=
MCP_ASSISTANT_ALLOWED_TOOLS_BY_USER=

# MCP LINE (optional on pc1)
MCP_LINE_BUILD_CONTEXT=../../mcp/mcp-line
MCP_LINE_PORT=18088
LINE_CHANNEL_SECRET=
LINE_CHANNEL_ACCESS_TOKEN=

# Forward LINE messages to assistant internally (no TLS)
MCP_LINE_AGENT_ENABLED=false
MCP_ASSISTANT_URL=http://mcp-assistant:8099

MCP_LINE_CONTROL_TOKEN=

LINE_USE_GLAMA=false
MCP_GLAMA_URL=http://host.docker.internal:7241

MCP_LINE_DB_PATH=/data/sqlite/mcp-line.sqlite
MCP_LINE_DATA_DIR=./data/mcp-line

MCP_LINE_ALLOWED_TOOLS=
