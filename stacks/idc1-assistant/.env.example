# idc1-assistant stack environment template (mcp-assistant + LINE webhook)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

# Networks
# Ensure shared networks exist: stacks/idc1-stack/create-networks.yml

# LINE Debug UI
LINE_DEBUG_UI_PORT=8098

# MCP ASSISTANT
MCP_ASSISTANT_BUILD_CONTEXT=../../mcp/mcp-assistant
MCP_ASSISTANT_PORT=8099
MCP_ASSISTANT_CONTROL_TOKEN=
# Example: ONE_MCP_URL=http://1mcp-agent:3050/mcp?app=windsurf
ONE_MCP_URL=http://pc1.vpn:3051/mcp?app=windsurf
ONE_MCP_BASIC_AUTH=
ONE_MCP_USERNAME=
ONE_MCP_PASSWORD=
# Example: ["mcp-imagen-light_1mcp_imagen_generate"]
MCP_ASSISTANT_ALLOWED_TOOLS=

# MCP LINE
MCP_LINE_BUILD_CONTEXT=../../mcp/mcp-line
MCP_LINE_PORT=8088
LINE_CHANNEL_SECRET=__REPLACE_ME__
LINE_CHANNEL_ACCESS_TOKEN=__REPLACE_ME__

# Forward LINE messages to assistant internally (no TLS)
MCP_LINE_AGENT_ENABLED=true
MCP_ASSISTANT_URL=http://mcp-assistant:8099

# Optional: if assistant integration endpoint is protected
MCP_LINE_CONTROL_TOKEN=

# Optional: fallback to glama
LINE_USE_GLAMA=false
MCP_GLAMA_URL=http://host.docker.internal:7441

# Persistence
MCP_LINE_DB_PATH=/data/sqlite/mcp-line.sqlite
MCP_LINE_DATA_DIR=./data/mcp-line

# Optional tool allowlist
MCP_LINE_ALLOWED_TOOLS=
