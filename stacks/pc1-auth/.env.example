# pc1-auth stack environment template (Authentik authentication)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

# Authentik Configuration
AUTHENTIK_HTTP_PORT=9000
AUTHENTIK_HTTPS_PORT=9443

# External Dependencies (Redis, PostgreSQL on pc1.vpn)
AUTHENTIK_REDIS_HOST=pc1.vpn
AUTHENTIK_POSTGRESQL_HOST=pc1.vpn
AUTHENTIK_POSTGRES_USER=authentik
AUTHENTIK_POSTGRES_NAME=authentik

# Secrets (required)
AUTHENTIK_POSTGRES_PASSWORD=__REPLACE_ME__
AUTHENTIK_SECRET_KEY=__REPLACE_ME__
AUTHENTIK_BOOTSTRAP_PASSWORD=__REPLACE_ME__
AUTHENTIK_BOOTSTRAP_TOKEN=__REPLACE_ME__

# Optional Settings
AUTHENTIK_ERROR_REPORTING_ENABLED=false
AUTHENTIK_LOG_LEVEL=info
AUTHENTIK_DISABLE_UPDATE_CHECK=true
