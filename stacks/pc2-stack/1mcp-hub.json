{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000
    },
    "mcp-devops": {
      "transport": "streamableHttp",
      "url": "http://mcp-devops:8325/mcp",
      "tags": ["pc2", "devops"],
      "enabled": true
    },
    "mcp-task": {
      "transport": "streamableHttp",
      "url": "http://mcp-task:8016/mcp",
      "tags": ["pc2", "task"],
      "enabled": true
    },
    "mcp-glama": {
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["pc2", "ai"],
      "enabled": true
    },
    "mcp-agents": {
      "transport": "streamableHttp",
      "url": "http://mcp-agents:8046/mcp",
      "tags": ["pc2", "agents"],
      "enabled": true
    },
    "mcp-playwright": {
      "transport": "streamableHttp",
      "url": "http://mcp-playwright:8025/mcp",
      "tags": ["pc2", "browser"],
      "enabled": true
    },
    "mcp-webtops": {
      "transport": "streamableHttp",
      "url": "http://mcp-webtops:8091/mcp",
      "tags": ["pc2", "webtops"],
      "enabled": true
    }
  }
}
