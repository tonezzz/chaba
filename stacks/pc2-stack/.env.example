# pc2-stack (hub) environment template
# Copy to `.env` locally (kept out of git) and fill in secrets marked `__REPLACE_ME__`.

# Workspace mount for 1mcp-agent (Windows path mounted into WSL on PC2)
PC2_WORKSPACE_HOST_DIR=/mnt/c/chaba

ONE_MCP_HOST=0.0.0.0
ONE_MCP_PORT=3050
