# PC1 GPU Stack - mcp-cuda dedicated stack
# Environment variables for GPU-accelerated services

# Build contexts
MCP_CUDA_BUILD_CONTEXT=../../mcp/mcp-cuda
MCP_RAG_LIGHT_BUILD_CONTEXT=../../mcp/mcp-rag-light
MCP_IMAGEN_LIGHT_BUILD_CONTEXT=../../mcp/mcp-imagen-light

# Service ports
MCP_CUDA_PORT=8057
MCP_RAG_LIGHT_PORT=8069
MCP_IMAGEN_LIGHT_PORT=8020

# GPU configuration
MCP_CUDA_GPU_COUNT=1

# SDXL Model configuration
PC1_SDXL_MODEL_HOST_DIR=C:/chaba/.models/sdxl
PC1_SDXL_MODEL_DIR=/models/sdxl

# RAG Light configuration
RAG_LIGHT_PUBLIC_BASE_URL=http://pc1.vpn:8069
RAG_LIGHT_TIMEOUT_SECONDS=60

# Image generation configuration
IMAGEN_OUTPUT_DIR=/app/images
IMAGEN_BASE_URL=http://pc1.vpn:8020

# Environment file
PC1_GPU_ENV_FILE=.env
