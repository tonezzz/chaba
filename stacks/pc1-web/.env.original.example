# PC1 Web Stack - Web services and UI
# Environment variables for web and user interface services

# Build contexts
OPENCHAT_UI_BUILD_CONTEXT=../../sites/openchat-ui
DEV_HOST_BUILD_CONTEXT=../../docker/dev-host

# Service ports
OPENCHAT_UI_PORT=3170
CADDY_HTTP_PORT=3080
CADDY_HTTPS_PORT=3443
DEV_HOST_SSH_PORT=2223
DEV_HOST_HTTP_PORT=3100

# OpenChat UI configuration
OPENCHAT_OPENAI_API_HOST=http://pc1.vpn:8181
OPENCHAT_OPENAI_API_KEY=sk-dummy
OPENCHAT_DEFAULT_MODEL=glama-default
OPENCHAT_DEFAULT_TEMPERATURE=0.5
OPENCHAT_DEFAULT_SYSTEM_PROMPT=" "

# Caddy reverse proxy
CADDY_INGRESS_DOMAINS=localhost
CADDY_INGRESS_EMAIL=

# Dev-host configuration
DEV_HOST_BASE_URL=http://pc1.vpn:3100
DEV_HOST_PC2_BASE_URL=http://dev-host.pc2:3000
A1_IDC1_BASE_URL=https://a1.idc1.surf-thailand.com
A1_IDC1_TEST_URL=https://a1.idc1.surf-thailand.com/test

# Environment file
PC1_WEB_ENV_FILE=.env
