{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "portainer": {
      "command": "portainer-mcp-stdio",
      "env": {
        "PORTAINER_SERVER": "${PORTAINER_SERVER}",
        "PORTAINER_TOKEN": "${PORTAINER_TOKEN}",
        "PORTAINER_READ_ONLY": "${PORTAINER_READ_ONLY}",
        "PORTAINER_DISABLE_VERSION_CHECK": "${PORTAINER_DISABLE_VERSION_CHECK}"
      },
      "tags": ["portainer", "docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "pm": {
      "command": "mcp-project-manager-stdio",
      "env": {
        "MCP_TASK_DATA_DIR": "${MCP_TASK_DATA_DIR}"
      },
      "tags": ["project", "tasks"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "mcp-github-models": {
      "transport": "streamableHttp",
      "url": "http://pc1.vpn:7242/mcp",
      "tags": ["vpn", "github-models"],
      "enabled": false,
      "disabled": true
    },
    "glama": {
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["glama"],
      "enabled": true
    },
    "mcp-imagen-light": {
      "transport": "streamableHttp",
      "url": "http://mcp-imagen-light:8020/mcp",
      "tags": ["idc1", "imagen", "local"],
      "connectionTimeout": 60000,
      "requestTimeout": 300000,
      "enabled": true
    }
  }
}
