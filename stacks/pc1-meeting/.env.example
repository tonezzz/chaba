# PC1 Meeting Stack - mcp-meeting (dev/stabilization)

# Build context
MCP_MEETING_BUILD_CONTEXT=../../mcp/mcp-meeting

# Service port (host -> container 8008)
MCP_MEETING_PORT=7208

# Persistence
MEETING_STORAGE_ROOT=./data/meeting
MEETING_STORAGE_PATH=/data/meetings.json

# Meeting behavior
MEETING_LOG_LEVEL=INFO
MEETING_MAX_SEGMENTS=1500
MEETING_SUMMARY_MAX_ENTRIES=20

# STT (optional)
MEETING_STT_URL=
MEETING_STT_HEALTH_PATH=/health
MEETING_STT_TIMEOUT_SECONDS=45
MEETING_DEFAULT_LANGUAGE=
MEETING_DEFAULT_WHISPER_MODEL=

# LLM summary (optional)
# Recommended for PC1: point to pc1-services mcp-openai-gateway
MEETING_LLM_BASE_URL=http://host.docker.internal:8181/v1
MEETING_LLM_API_KEY=
MEETING_LLM_MODEL=glama-default
MEETING_LLM_TEMPERATURE=0.2
MEETING_LLM_TIMEOUT_SECONDS=60

# Default behavior for summarize_meeting: 0 = heuristic, 1 = try LLM then fallback
MEETING_SUMMARY_USE_LLM=0

# Env file selector
PC1_MEETING_ENV_FILE=.env
