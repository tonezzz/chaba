# idc1-stack environment template (minimal mcp0)
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

MCP0_BUILD_CONTEXT=../../mcp/mcp0
MCP0_PORT=8355
MCP0_APP_NAME=idc1-mcp0
MCP0_ADMIN_TOKEN=__REPLACE_ME__
MCP0_PROVIDERS=mcp-agents:http://mcp-agents:8046|health=/health|capabilities=/.well-known/mcp.json,mcp-devops:http://mcp-devops:${MCP_DEVOPS_PORT}|health=/health|capabilities=/.well-known/mcp.json,mcp-playwright:http://mcp-playwright:${MCP_PLAYWRIGHT_PORT}|health=/health|capabilities=/.well-known/mcp.json,mcp-memory:http://mcp-memory-bridge:${MCP_MEMORY_PORT}|health=/health|capabilities=/.well-known/mcp.json
MCP0_ALLOW_ORIGINS=https://test.idc1.surf-thailand.com

MCP_AGENTS_BUILD_CONTEXT=../../mcp/mcp-agents
MCP_AGENTS_PORT=8446
AGENTS_API_BASE=https://test.idc1.surf-thailand.com/agents/api
AGENTS_DEFAULT_USER=default
AGENTS_DEFAULT_LIMIT=12
AGENTS_JSON_LIMIT=2mb
MCP_AGENTS_DATA_DIR=./data/mcp-agents

MCP_GLAMA_BUILD_CONTEXT=../../mcp/mcp-glama
MCP_GLAMA_PORT=7441
GLAMA_API_URL=
GLAMA_API_KEY=__REPLACE_ME__
GLAMA_MODEL=gpt-4o-mini
GLAMA_TEMPERATURE=0.2
GLAMA_MAX_TOKENS=900
GLAMA_TIMEOUT_SECONDS=30

MCP_TESTER_BUILD_CONTEXT=../../mcp/mcp-tester
MCP_TESTER_PORT=8435
MCP_TESTER_DATA_DIR=./data/mcp-tester
MCP_TESTER_SUITE_FILE=/app/tests.example.json
MCP_TESTER_SUITE_FILES=/app/tests.optional.json
MCP_TESTER_DEFAULT_TIMEOUT_MS=5000
MCP_TESTER_HISTORY_FILE=/data/run-history.ndjson
DEV_HOST_TEST_BASE=https://test.idc1.surf-thailand.com
A1_IDC1_BASE_URL=https://a1.idc1.surf-thailand.com
A1_IDC1_TEST_URL=https://test.idc1.surf-thailand.com

MCP_DEVOPS_BUILD_CONTEXT=../../mcp/mcp-devops
MCP_DEVOPS_PORT=8425
DEV_HOST_BASE_URL=https://test.idc1.surf-thailand.com
DEV_HOST_PC2_BASE_URL=https://test.idc1.surf-thailand.com
MCP_DEVOPS_JSON_LIMIT=2mb

MCP_PLAYWRIGHT_BUILD_CONTEXT=../../mcp/mcp-playwright
MCP_PLAYWRIGHT_PORT=8460
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT_MS=15000
MCP_PLAYWRIGHT_SCENARIOS_DIR=./data/mcp-playwright/scenarios
MCP_PLAYWRIGHT_OUTPUT_DIR=./data/mcp-playwright/output

MCP_MEMORY_BUILD_CONTEXT=../../mcp/mcp-memory-bridge
MCP_MEMORY_PORT=8470
