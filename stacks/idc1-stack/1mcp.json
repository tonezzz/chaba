{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "disabled": true
    },
    "mcp-devops": {
      "transport": "streamableHttp",
      "url": "http://mcp-devops:8425/mcp",
      "tags": ["idc1", "devops"],
      "enabled": true,
      "disabled": true
    },
    "mcp-task": {
      "transport": "streamableHttp",
      "url": "http://mcp-task:8016/mcp",
      "tags": ["idc1", "task", "docker"],
      "enabled": true,
      "disabled": true
    },
    "mcp-memory": {
      "transport": "streamableHttp",
      "url": "http://mcp-memory:8470/mcp",
      "tags": ["memory"],
      "enabled": true,
      "disabled": true
    },
    "mcp-sequentialthinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "tags": ["sequentialthinking"],
      "connectionTimeout": 60000,
      "requestTimeout": 60000,
      "restartOnExit": true,
      "restartDelay": 1000,
      "disabled": true
    },
    "glama": {
      "type": "http",
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["glama"],
      "enabled": true
    }
  }
}
