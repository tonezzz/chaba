{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "portainer": {
      "command": "portainer-mcp-stdio",
      "env": {
        "PORTAINER_SERVER": "${PORTAINER_SERVER}",
        "PORTAINER_TOKEN": "${PORTAINER_TOKEN}",
        "PORTAINER_READ_ONLY": "${PORTAINER_READ_ONLY}",
        "PORTAINER_DISABLE_VERSION_CHECK": "${PORTAINER_DISABLE_VERSION_CHECK}"
      },
      "tags": ["portainer", "docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "mcp-github-models": {
      "transport": "streamableHttp",
      "url": "http://pc1.vpn:7242/mcp",
      "tags": ["vpn", "github-models"],
      "enabled": true
    }
  }
}
