{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "portainer": {
      "command": "portainer-mcp-stdio",
      "env": {
        "PORTAINER_SERVER": "${PORTAINER_SERVER}",
        "PORTAINER_TOKEN": "${PORTAINER_TOKEN}",
        "PORTAINER_READ_ONLY": "${PORTAINER_READ_ONLY}",
        "PORTAINER_DISABLE_VERSION_CHECK": "${PORTAINER_DISABLE_VERSION_CHECK}"
      },
      "tags": ["portainer", "docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000,
      "enabled": true
    },
    "mcp-devops": {
      "transport": "streamableHttp",
      "url": "http://mcp-devops:8425/mcp",
      "tags": ["idc1", "devops"],
      "enabled": true,
      "disabled": true
    },
    "mcp-task": {
      "transport": "streamableHttp",
      "url": "http://mcp-task:8016/mcp",
      "tags": ["idc1", "task", "docker"],
      "enabled": true,
      "disabled": true
    },
    "mcp-memory": {
      "transport": "streamableHttp",
      "url": "http://mcp-memory:8470/mcp",
      "tags": ["memory"],
      "enabled": true,
      "disabled": true
    },
    "mcp-sequentialthinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "tags": ["sequentialthinking"],
      "connectionTimeout": 60000,
      "requestTimeout": 60000,
      "restartOnExit": true,
      "restartDelay": 1000,
      "disabled": true
    },
    "glama": {
      "type": "http",
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["glama"],
      "enabled": true
    },
    "mcp-github-models": {
      "transport": "streamableHttp",
      "url": "http://pc1.vpn:7242/mcp",
      "tags": ["vpn", "github-models"],
      "enabled": true
    },
    "mcp-rag": {
      "transport": "streamableHttp",
      "url": "http://mcp-rag:8055/mcp",
      "tags": ["rag"],
      "enabled": true
    },
    "mcp-doc-archiver": {
      "transport": "streamableHttp",
      "url": "http://mcp-doc-archiver:8066/mcp",
      "tags": ["doc-archiver"],
      "enabled": true
    }
  }
}
