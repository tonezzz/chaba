{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspaces/chaba"],
      "tags": ["filesystem"],
      "connectionTimeout": 20000,
      "requestTimeout": 60000,
      "restartOnExit": true,
      "restartDelay": 1000
    },
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000
    },
    "mcp-devops": {
      "transport": "http",
      "url": "http://mcp-devops:${MCP_DEVOPS_PORT:-8425}",
      "tags": ["idc1", "devops"],
      "enabled": true
    },
    "glama": {
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["glama"],
      "enabled": true
    }
  }
}
