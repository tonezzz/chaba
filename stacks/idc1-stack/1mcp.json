{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000
    },
    "mcp-devops": {
      "transport": "http",
      "url": "http://mcp-devops:${MCP_DEVOPS_PORT:-8425}",
      "tags": ["idc1", "devops"],
      "enabled": true
    },
    "mcp-task": {
      "transport": "http",
      "url": "http://mcp-task:8016",
      "tags": ["idc1", "task"],
      "enabled": true
    },
    "mcp-memory": {
      "transport": "streamableHttp",
      "url": "http://mcp-memory:8470/mcp",
      "tags": ["memory"],
      "enabled": true
    },
    "mcp-sequentialthinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "tags": ["sequentialthinking"],
      "connectionTimeout": 60000,
      "requestTimeout": 60000,
      "restartOnExit": true,
      "restartDelay": 1000
    },
    "glama": {
      "transport": "streamableHttp",
      "url": "http://mcp-glama:8014/mcp",
      "tags": ["glama"],
      "enabled": true
    }
  }
}
