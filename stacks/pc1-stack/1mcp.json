{
  "mcpServers": {
    "docker": {
      "command": "docker-mcp-stdio",
      "tags": ["docker"],
      "connectionTimeout": 120000,
      "requestTimeout": 120000,
      "restartOnExit": true,
      "restartDelay": 2000
    },
    "mcp-devops": {
      "transport": "http",
      "url": "http://mcp-devops:8325",
      "tags": ["pc1", "devops"],
      "enabled": true
    },
    "mcp-task": {
      "transport": "http",
      "url": "http://mcp-task:8016",
      "tags": ["pc1", "task"],
      "enabled": true
    }
  }
}
