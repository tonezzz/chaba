# pc1-stack environment template
# Copy to .env (kept out of git) and replace secrets marked __REPLACE_ME__.

HOST_REPO=C:/chaba

MCP0_BUILD_CONTEXT=../../mcp/mcp0
MCP0_PORT=8310
MCP0_ADMIN_TOKEN=__REPLACE_ME__
MCP0_ALLOW_ORIGINS=http://localhost:3000,http://dev-host.pc1:3100

MCP_AGENTS_BUILD_CONTEXT=../../mcp/mcp-agents
MCP_AGENTS_PORT=8046
AGENTS_API_BASE=http://dev-host.pc1:3100/test/agents/api
AGENTS_DEFAULT_USER=default
AGENTS_DEFAULT_LIMIT=12
AGENTS_JSON_LIMIT=2mb
MCP_AGENTS_DATA_DIR=./data/mcp-agents

# Register providers reachable from pc1 (edit as needed)
MCP0_PROVIDERS=mcp-agents-pc1:${AGENTS_API_BASE}|health=/health|capabilities=/.well-known/mcp.json|tools=fetch_sessions+fetch_archives+observability_probe+relay_prompt
