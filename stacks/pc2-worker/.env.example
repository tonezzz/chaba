# Host paths (adjust to match your WSL home)
HOST_REPO=/home/tonezzz/repos
HOST_MODEL_DIR=/home/tonezzz/models
HOST_PIP_CACHE=/home/tonezzz/.cache/pip
HOST_SSH_AUTH_SOCK=/home/tonezzz/.ssh/ssh-agent.socket

# Voice_chat repo (used by MCP builds)
VOICE_CHAT_REPO=/home/tonezzz/repos/voice_chat

# Dev proxy assets
DEV_PROXY_CONFIG=./dev-proxy/Caddyfile
DEV_PROXY_CERTS=./dev-proxy/certs
DEV_PROXY_TARGET=host.docker.internal:3100
DEV_PROXY_DOMAIN=pc2.localtest.me
DEV_PROXY_CERT_FILE=/certs/pc2.localtest.me+2.pem
DEV_PROXY_KEY_FILE=/certs/pc2.localtest.me+2-key.pem
DEV_HOST_DOMAIN=dev-host.pc2
DEV_HOST_CERT_FILE=/certs/dev-host.pc2.pem
DEV_HOST_KEY_FILE=/certs/dev-host.pc2-key.pem

# Service ports
REDIS_PORT=6379
MCP_DOCKER_PORT=8340

# MCP0 / MCP provider config
MCP0_PORT=8310
MCP0_ADMIN_TOKEN=changeme-mcp0-admin
MCP_GLAMA_PORT=7214
GLAMA_API_URL=https://glama.ai/api/gateway/openai/v1/chat/completions
GLAMA_API_KEY=changeme-glama-key
GLAMA_MODEL=gpt-4o-mini
GLAMA_TEMPERATURE=0.2
GLAMA_MAX_TOKENS=900
GLAMA_TIMEOUT_SECONDS=30
MCP_MEETING_PORT=7208
MEETING_STT_URL=
MEETING_STT_HEALTH_PATH=/health
MEETING_MAX_SEGMENTS=1500
MEETING_SUMMARY_MAX_ENTRIES=20
MEETING_DEFAULT_LANGUAGE=
MEETING_DEFAULT_WHISPER_MODEL=
MEETING_STORAGE_ROOT=./data/meeting
MEETING_STORAGE_PATH=/data/meetings.json
MCP0_PROVIDERS=mcp-docker:http://mcp-docker:8340|health=/health|capabilities=/.well-known/mcp.json|tools=create-container+deploy-compose+get-logs+list-containers,mcp-glama:http://mcp-glama:8014|health=/health|capabilities=/.well-known/mcp.json|tools=chat_completion,mcp-meeting:http://mcp-meeting:8008|health=/health|capabilities=/.well-known/mcp.json|tools=start_meeting+end_meeting+append_transcript+ingest_audio_chunk+get_meeting_notes+summarize_meeting+list_sessions
